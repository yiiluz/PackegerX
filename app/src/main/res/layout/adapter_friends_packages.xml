<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="140dp">
    <!--    android:background="@drawable/pacage_bg">-->
    <ImageView
        android:id="@+id/imageViewFriends"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_envelpoe" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="To:  "
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Current Location: "
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewToFriendAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCurrentLocationFriendAdapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:inputType="textMultiLine|textImeMultiLine"
        android:maxLines="3"
        android:singleLine="false"
        android:text="nfjkvnjdnrjkngjkdrnkjngtvjkldnrjfvljcnjkfnvbjkdrnjtg  jgijrnjigt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textViewToFriendAdapter" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Destination: "
        app:layout_constraintStart_toEndOf="@+id/imageViewFriends"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentLocationFriendAdapter" />

    <TextView
        android:id="@+id/textViewDestinationFriendsAdapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:inputType="textMultiLine|textImeMultiLine"
        android:maxLines="3"
        android:singleLine="false"
        android:text="nfjkvnjdnrjkngjkdrnkjngtvjkldnrjfvljcnjkfnvbjkdrnjtg  jgijrnjigt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentLocationFriendAdapter" />

</androidx.constraintlayout.widget.ConstraintLayout>